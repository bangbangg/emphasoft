{
  "name": "acits-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.20.0",
    "chokidar": "^3.4.3",
    "classnames": "^2.2.6",
    "core-js": "^3.8.0",
    "eslint": "^6.6.0",
    "node-sass": "^4.14.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-infinite-scroller": "^1.2.4",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-textarea-autosize": "^8.3.0",
    "react-token-auth": "^1.1.7",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^7.2.1",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.19.1",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint-config-airbnb": "^18.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier-eslint-cli": "^5.0.0",
    "react-scripts": "^3.4.4",
    "stylelint": "^13.7.2",
    "stylelint-config-htmlacademy": "^0.1.4",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "npm run tsc && npm run lint:ts && npm run lint:css",
    "lint:ts": "eslint ./src/**/*.{ts,tsx}",
    "lint:css": "stylelint \"src/**/*.css\"",
    "prettier": "npm run prettier:ts && npm run prettier:css",
    "prettier:css": "prettier --write \"src/**/*.css\" && stylelint \"src/**/*.css\" --fix --config ./.stylelintrc",
    "prettier:ts": "prettier-eslint --list-different $PWD/'src/**/*.{ts,tsx}'; prettier-eslint --write $PWD/'src/**/*.{ts,tsx}'",
    "tsc": "tsc"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb",
      "airbnb/hooks"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ],
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "import/prefer-default-export": 2,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "jsx-a11y/label-has-associated-control": [
        2,
        {
          "labelComponents": [
            "CustomInputLabel"
          ],
          "labelAttributes": [
            "label"
          ],
          "controlComponents": [
            "CustomInput"
          ],
          "depth": 3
        }
      ],
      "object-curly-newline": [
        "error",
        {
          "ObjectExpression": "always",
          "ObjectPattern": "never"
        }
      ],
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        1,
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ],
      "linebreak-style": 0,
      "camelcase": 0,
      "no-case-declarations": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css}": [
      "npm run lint"
    ]
  }
}
